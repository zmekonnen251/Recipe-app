<h1 class='text-center text-success mb-3'>Recipes</h1>

<div id="recipes" class='d-flex flex-column'>
  <% @recipes.each do |recipe| %>
  <div class='mb-3'>
  <%= render partial:'recipe',locals:{recipe_data:recipe} %>

      
 <div class='mt-2 px-5'>
    <%= link_to "Show this recipe", recipe_url(id:recipe.id) ,method: :get,style:'margin-left:9rem;',class:'btn btn-success p-1'%>
    <%= link_to "New recipe", new_recipe_path ,class:'btn btn-success p-1 '%>
  </div>
  </div>
    
  <% end %>
  
</div>


