<div id="<%= dom_id(recipe_data) %>" class='col-sm-8  row p-4 m-auto border border-secondary rounded-3 align-items-center mb-1'>
  <div class='col-4 d-flex flex-column gap-3 border-end border-2 align-items-center'>
    <h2 class="text-center text-capitalize"><%=recipe_data.name%></h2>
    <%if can? :manage,recipe_data%>
      <%= button_to 'Remove',recipe_destroy_path(id:recipe_data.id),method: :delete ,class:'btn btn-danger'%>
    <%end%>
  </div>


  <p class='col-6'><%= recipe_data.description %></p>
</div>