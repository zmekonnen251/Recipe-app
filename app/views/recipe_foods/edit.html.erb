<div class="row d-flex justify-content-center">
<h1 class='text-center'>Edit Ingredient</h1>

<div class="w-50">
<%= form_with model: @recipe_food, url: recipe_recipe_food_url(recipe_id:params[:recipe_id],id:params[:id]),method: :'patch' do |form| %>
  <div class="col-md-12">
    <% if @recipe_food.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@recipe_food.errors.count, "error") %> prohibited this recipe from being saved:</h2>

        <ul>
          <% @recipe_food.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
 
  
  <div class='my-2 text-secondary'>
    <%= form.label :food_id, 'Food',class:'text-secondary mx-1' %>
    <%= form.select :food_id ,@foods.map { |f| [f.name, f.id]} %>
    <%= form.label :quantity, 'Quantity' ,class:'text-secondary mx-1'%>
    <%= form.number_field :quantity %>
  </div>

  <div class='mt-2'>
    <%= form.submit 'Modify Ingredient',class: "btn btn-secondary"%>
  </div>


  <div class='mb-3'>
    <%= link_to "Back to recipe", recipe_path(id:params[:recipe_id]) %>
  </div>
<% end %>
</div>

</div>

